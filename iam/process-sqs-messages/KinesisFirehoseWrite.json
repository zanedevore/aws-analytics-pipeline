{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowWriteToFirehose",
            "Effect": "Allow",
            "Action": [
                "firehose:PutRecord",
                "firehose:PutRecordBatch"
            ],
            "Resource": [
                "arn:aws:firehose:us-east-1:{ACCOUNT_ID}:deliverystream/${DELIVERY_STREAM}"
            ]
        }
    ]
}